<!DOCTYPE html>
<html>
	<head>
		<title>
			Seller
		</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	</head>
	
	<body>
		<div class="container">
			<div class="page-header">
				<h1>Seller Interface</h1>
			</div>
			<div class="jumbotron">
			   	<!-- <form action="/buyer_selection.html"> Use action="/" in form-->
			   	<form onsubmit="submitText()" id="name">
				   	<div class="form-group">
					    <label for="inputdefault">What's your team name?</label>
					    <input class="form-control" id="name-input" type="text">
						<p id="output"></p>
						<button type="submit" form = "name" class="btn btn-success">Submit</button>
				  	</div>
			  	</form>
				<script src="/socket.io/socket.io.js"></script>
				<script>
					var socket = io.connect();
					function submitText(){
						console.log(document.getElementById("name-input").value);
						socket.emit('namesubmit', {name: document.getElementById("name-input").value, role: 2});
					};

					//when we receive buttonUpdate, do this
					socket.on('buttonUpdate', function(data){
						document.getElementById("output").innerHTML = data;
						window.location.href = '/seller_selection.html';
					});
				</script>
			</div>
		</div>

		
		<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
		<!-- <script src="server.js"></script> -->
	</body>
</html>